<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users | GameMatch</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
</head>
<body class="bg-light">
    <div class="container">
        <h1>Manage Users</h1>
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>isAdmin</th>
                    <th>Save</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <form id="user-new" action="/admin/users" method="POST"></form>
                    <td>
                        <input type="text" name="username" class="form-control" required form="user-new">
                    </td>
                    <td>
                        <input type="text" name="email" class="form-control" required form="user-new">
                    </td>
                    <td>
                        <div>
                            <input id="isAdmin-true" type="radio" name="isAdmin" value="true" form="user-new" required>
                            <label for="isAdmin-true">True</label>
                        </div>
                        <div>
                            <input id="isAdmin-false" type="radio" name="isAdmin" value="false" form="user-new" required>
                            <label for="isAdmin-false" checked>False</label>
                        </div>
                    </td>
                    <td>
                        <button type="submit" class="btn btn-primary" form="user-new">Save</button>
                    </td>
                </tr>
                <% users.forEach((user, userIndex) => { %>
                    <form id="user-update-form-<%= userIndex %>" action="/admin/users/<%= user._id %>?_method=PUT" method="POST"></form>
                    <% if (!user.deleted) { %>
                        <tr>
                    <% } else { %>
                        <tr class="bg-dark">
                    <% } %>
                            <input type="hidden" name="_id" value="<%= user._id %>" form="user-update-form-<%= userIndex %>">
                            <input type="hidden" name="deleted" value="false" form="user-update-form-<%= userIndex %>">
                            <td>
                                <input type="text" name="username" value="<%= user.username %>" class="form-control" form="user-update-form-<%= userIndex %>" required>
                            </td>
                            <td>
                                <input type="text" name="email" value="<%= user.email %>" class="form-control" form="user-update-form-<%= userIndex %>" required>
                            </td>
                            <td>
                                <div>
                                    <input id="isAdmin-true" type="radio" name="isAdmin" value="true" form="user-update-form-<%= userIndex %>" required <%= (() => { if (user.isAdmin) { return "checked"; } })() %>>
                                    <label for="isAdmin-true">True</label>
                                </div>
                                <div>
                                    <input id="isAdmin-false" type="radio" name="isAdmin" value="false" form="user-update-form-<%= userIndex %>" required <%= (() => { if (!user.isAdmin) { return "checked"; } })() %>>
                                    <label for="isAdmin-false">False</label>
                                </div>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-primary" form="user-update-form-<%= userIndex %>">Save</button>
                            </td>
                            <td>
                                <% if (!user.deleted) { %>
                                    <form id="user-delete-<%= userIndex %>" action="/admin/users/<%= user._id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger" form="user-delete-<%= userIndex %>">Delete</button>
                                    </form>
                                <% } else { %>
                                    <form id="user-republish-<%= userIndex %>" action="/admin/users/<%= user._id %>?_method=PUT" method="POST">
                                        <input type="hidden" name="_id" value="<%= user._id %>">
                                        <input type="hidden" name="username" value="<%= user.username %>">
                                        <input type="hidden" name="email" value="<%= user.email %>">
                                        <input type="hidden" name="isAdmin" value="<%= user.isAdmin %>">
                                        <input type="hidden" name="deleted" value="false">
                                        <button type="submit" class="btn btn-success" form="user-republish-<%= userIndex %>">Republish</button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
