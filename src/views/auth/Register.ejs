<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Register | GameMatch</title>
<%- include('../partials/Header') %>
    <section class="form my-5 mx-5">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-lg-5">
                    <img src="./css/loginImage.jpg" class="loginImg img-fluid" alt="Image of two videogame controllers.">
                </div>
                <div class="col-lg-7 px-5 pt-5 text-light">
                    <h1 class="font-weight-bold py-3">GameMatch</h1>
                    <h4>Create an account</h4>
                    <form action='/register' method='POST'>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="user" placeholder="Username" class="form-control mt-4 mb-2 p-4" name="user[username]" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="email" placeholder="Email" class="form-control my-2 p-4" name="user[email]" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="password" placeholder="Password" class="form-control my-2 p-4" name="user[password]"required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="password" placeholder="Confirm password" class="form-control my-2 p-4" name="user[confirm_password]"required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-lg-7">
                                <button class="btn1 mt-3 mb-5">Register</button>
                            </div>
                        </div>
                        <p>Already have an account? <a href="/login">Login here.</a></p>
                    </form>
                </div>
            </div>
        </div>
    </section>
<%- include('../partials/footer') %>