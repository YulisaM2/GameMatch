<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title><%= game.name %> | GameMatch</title>
<%- include('../partials/Header') %>
    <div class="container">
        <div class="gameInfo my-5 text-center text-light">
            <div class="d-flex">
                <img src="<%= game.image %>" alt="<%= game.name %> poster" class="gameImg mw-100 ml-auto">
                <div class="mr-auto ml-4 align-self-end text-left">
                    <span class="h1"><%= game.name %></span>
                    <div class="text-left mt-2 mb-4">
                        <span>Tags: </span>
                        <% game.tags.forEach(tag => { %>
                            <span class="tag py-1 px-2 mr-1"><%= tag.name %></span>
                        <% }); %>
                    </div>
                    <form class="mt-3"action="/games/<%= game._id %>/create">
                        <button type="submit" class="btn1">Create post</button>
                    </form>
                </div>
            </div>
        </div>
        <div id="posts" class="mb-5 text-light">
            <% if (posts.length != 0) { %>
                <% posts.forEach(post => { %>
                    <div class="card1 px-5 py-4 mb-4 shadow-sm">
                        <h2><a class="postTitle" href="/games/<%= game._id %>/posts/<%= post._id %>"><%= post.title %></a></h2>
                        <small class="mb-1">Posted by <span class="author"><%= post.author.username %> </span>| Tags: <span class="tag py-1 px-2 mr-1">Ranking</span></small>
                        <p><%= post.description %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="card p-4">
                    <p class="text-center">No posts yet.</p>
                </div>
            <% } %>
        </div>
    </div>
<%- include('../partials/footer') %>
