<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Games | GameMatch</title>
<%- include('../partials/Header') %>
    <div class="container my-5">
        <h1 class="text-center text-light mb-4">List of all games</h1>
        <% if (searched_title){ %>
            <div class="d-flex mb-4">
                <form action="/games" action="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" value="<%= searched_title %>" class="form-control searchbar">
                        <input type="submit" value="Search" class="btn1 btn-default searchbtn ml-1">
                    </div>	
                </form>
                <button onclick="location.href = '/games';" class="btn1 btn-default searchbtn red ml-1">Clear</button>
            </div>
        <% }else{ %>
            <div class="d-flex">
                <form action="/games" action="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Search game title..." class="form-control searchbar">
                        <input type="submit" value="Search" class="btn1 btn-default searchbtn ml-1">
                    </div>	
                </form>
            </div>
        <% } %>
        <div class="row d-flex games no-border text-center my-4 py-3 px-2">
            <% games.forEach(game => { %>
                <div class="col mt-3">
                    <img class="gameImg" src="<%= game.image %>" alt="<%= game.name %> poster" style="--bs-aspect-ratio: 180%;">
                    <h2 class="pt-2"><a class="game-name" href="/games/<%= game._id %>"><%= game.name %></a></h2>
                </div>
            <% }); %>
        </div>
    </div>
<%- include('../partials/footer') %>
