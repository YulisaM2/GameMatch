<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Games | GameMatch</title>

    <link rel="stylesheet" href="/css/games/list.css">
</head>
<body>
    <h1>List of all games</h1>
    <% if (searched_title){ %>
        <form action="/games" action="GET" class="form-inline" style="float: left;">
            <div class="form-group">
                <input type="text" name="search" value="<%= searched_title %>" class="form-control">
                <input type="submit" value="Search" class="btn btn-default">
            </div>	
        </form>
        <button onclick="location.href = '/games';" class="btn btn-default">Clear</button>
    <% }else{ %>
        <form action="/games" action="GET" class="form">
            <div class="form-group">
                <input type="text" name="search" placeholder="Search game title..." class="form-control">
                <input type="submit" value="Search" class="btn btn-default">
            </div>	
        </form>
    <% } %>
    <div class="games">
        <% games.forEach(game => { %>
            <div class="game">
                <img src="<%= game.image %>" alt="<%= game.name %> poster">
                <h2><a href="/games/<%= game._id %>"><%= game.name %></a></h2>
            </div>
        <% }); %>
    </div>
</body>
</html>
